<div class="col-md-8">
  <% @topics.each do |topic| %>
    <div class="media">
      <div class="media_body">
        <h4 class="media-heading">
          <%= link_to topic.name, topic %>
        </h4>
        <small>
          <%= topic.description %>
        </small>
      </div>
    </div>
  <% end %>
  <% if user_is_authorized_for_topics? %>
    <div class="col-md-4">
      <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
