<h1>Edit Advertisement</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines for advertisements</p>
    <ul>
      <li>Guideline #1</li>
      <li>Guideline #2</li>
      <li>Guideline #3</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @advertisement do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: "Edit advertisement title" %>
    </div>
    <div class="form-group">
      <%= f.label :copy %>
      <%= f.text_area :copy, rows: 8, class: 'form-control', placeholder: "Edit advertisement copy" %>
    </div>
    <div class="form-group">
      <%= f.label :price %>
      <%= f.text_area :price, rows: 1, class: 'form-control', placeholder: "Edit advertisement price" %>
    </div>
    <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
    <% end %>
  </div>
</div>
